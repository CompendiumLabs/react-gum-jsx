{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "scripts/**/*.ts", "demo/src/**/*.ts", "demo/src/**/*.tsx", "demo/vite.config.ts"],
  "exclude": ["node_modules", "dist", "demo/dist"]
}
